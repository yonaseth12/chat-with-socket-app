<RoleChoiceScreen>:
    name: "role_choice"
    selected_card: None  # Stores selected card

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        MDLabel:
            text: "Select an Option"
            halign: "center"
            font_style: "H4"
            font_name: "src/fonts/Sour_Gummy/SourGummy-VariableFont_wdth,wght.ttf"

        BoxLayout:
            orientation: "horizontal"
            spacing: dp(20)
            size_hint_y: None
            height: dp(220) 

            MDCard:
                id: create_group_card
                orientation: "vertical"
                padding: dp(10)
                size_hint: 0.5, 1
                ripple_behavior: True
                radius: [20]
                md_bg_color: (1, 1, 1, 1) if root.selected_card == "create" else (1, 1, 1, 0.2)  
                on_release: root.select_card("create")

                Image:
                    source: "src/assets/create_a_group.png"
                    allow_stretch: True
                    keep_ratio: True
                    size_hint_y: 0.7
                    pos_hint: {"center_x": 0.5}

                MDLabel:
                    text: "Create a Group"
                    halign: "center"
                    font_name: "src/fonts/Sour_Gummy/SourGummy-VariableFont_wdth,wght.ttf"
                    size_hint_y: 0.3

            MDCard:
                id: join_group_card
                orientation: "vertical"
                padding: dp(10)
                size_hint: 0.5, 1
                ripple_behavior: True
                radius: [20]
                md_bg_color: (1, 1, 1, 1) if root.selected_card == "join" else (1, 1, 1, 0.2)  
                on_release: root.select_card("join")

                Image:
                    source: "src/assets/join_a_group.png"
                    allow_stretch: True
                    keep_ratio: True
                    size_hint_y: 0.7
                    pos_hint: {"center_x": 0.5}

                MDLabel:
                    text: "Join a Group"
                    halign: "center"
                    font_name: "src/fonts/Sour_Gummy/SourGummy-VariableFont_wdth,wght.ttf"
                    size_hint_y: 0.3

        Widget:
            size_hint_y: None
            height: dp(20)

        MDRaisedButton:
            text: "Continue"
            pos_hint: {"center_x": 0.5}
            font_name: "src/fonts/Sour_Gummy/SourGummy-VariableFont_wdth,wght.ttf"
            size_hint_x: 0.8
            on_release: root.confirm_selection()

        Widget:
            size_hint_y: None
            height: dp(20)
