<LoadingScreen>:
    name: "loading"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            spacing: dp(15)
            MDLabel:
                id: loading_label
                halign: "center"
                theme_text_color: "Primary"
                size_hint_y: None
                height: self.texture_size[1]
                font_name: "src/fonts/Sour_Gummy/SourGummy-VariableFont_wdth,wght.ttf"
            AnchorLayout:
                size_hint_y: None
                height: dp(48)
                MDSpinner:
                    size_hint: None, None
                    size: dp(48), dp(48)
                    active: True
